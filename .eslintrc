{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "sourceType": "module",
  "plugins": [
    "react"
  ],
  "rules": {
      "strict": 0,
      "react/jsx-filename-extension": 0,
      "react/forbid-prop-types": 0,
      "quotes": [
        "error",
        "single"
        ]
      },
  # "parser": "babel-eslint"
}


